<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">

        <!-- Basic Layout -->
        <div class="row">
            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Create place advertising sign</h5>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/place/create">
                            <div class="form-floating form-floating-outline mb-4">
                                <input type="text" class="form-control" id="basic-default-fullname" value=""
                                    name="type" />
                                <label for="basic-default-fullname">Type</label>
                            </div>
                            <div class="form-floating form-floating-outline mb-4">
                                <input type="text" class="form-control" id="basic-default-fullname" value=""
                                    name="address" />
                                <label for="basic-default-fullname">Address</label>
                            </div>
                            <div class="form-floating form-floating-outline mb-4">
                                <input type="text" class="form-control" id="basic-default-company" value=""
                                    name="long" />
                                <label for="basic-default-company">Long</label>
                            </div>
                            <div class="form-floating form-floating-outline mb-4">
                                <input type="text" class="form-control" id="basic-default-company" value=""
                                    name="lat" />
                                <label for="basic-default-company">Lat</label>
                            </div>
                            <div class="form-floating form-floating-outline mb-4">
                                <select class="form-select" id="exampleFormControlSelect1"
                                    aria-label="Default select example" name="ads">
                                    <option value="{{placeAds.ads._id}}" selected>{{placeAds.ads.type}}-
                                        id:
                                        {{placeAds.ads._id}}
                                    </option>
                                    {{#each advertisements}}
                                    <option value="{{this._id}}">{{this.type}}
                                        - id:
                                        {{this._id}}
                                    </option>
                                    {{/each}}
                                </select>
                                <label for="exampleFormControlSelect1">Open this select
                                    advertising sign</label>
                            </div>

                            <button type="submit" class="btn btn-primary">
                                Create
                            </button>
                            <button type="button" onclick="window.history.back();" class="btn btn-secondary">
                                Back
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Merged -->
        </div>
    </div>