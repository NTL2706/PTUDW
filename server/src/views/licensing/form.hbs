<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">

        <!-- Basic Layout -->
        <div class="row">
            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Advertising licensing</h5>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/licensing/create" enctype="multipart/form-data">
                            <div class="form-floating form-floating-outline mb-4">
                                <input type="text" class="form-control" id="basic-default-company"
                                    value="{{licensing.company.name}}" name="companyName" readonly />
                                <label for="basic-default-company">Company Name</label>
                            </div>
                            <div class="form-floating form-floating-outline mb-4">
                                <input type="text" class="form-control" id="basic-default-company"
                                    value="{{licensing.company.email}}" name="companyEmail" readonly />
                                <label for="basic-default-company">Company Email</label>
                            </div>
                            <div class="form-floating form-floating-outline mb-4">
                                <input type="text" class="form-control" id="basic-default-company"
                                    value="{{licensing.company.phone}}" name="companyPhone" readonly />
                                <label for="basic-default-company">Company Phone</label>
                            </div>
                            <div class="form-floating form-floating-outline mb-4">
                                <input type="text" class="form-control" id="basic-default-company"
                                    value="{{licensing.type}}" name="companyPhone" readonly />
                                <label for="basic-default-company">Type</label>
                            </div>

                            <div class="form-floating form-floating-outline mb-4">
                                <input type="text" class="form-control" id="basic-default-fullname"
                                    value="{{licensing.address}}" name="address" readonly />
                                <label for="basic-default-fullname">Address</label>
                            </div>
                            <div class="form-floating form-floating-outline mb-4">
                                <input type="text" class="form-control" id="basic-default-company"
                                    value="{{licensing.lon}}" name="lon" readonly />
                                <label for="basic-default-company">Lon</label>
                            </div>
                            <div class="form-floating form-floating-outline mb-4">
                                <input type="text" class="form-control" id="basic-default-company"
                                    value="{{licensing.lat}}" name="lat" readonly />
                                <label for="basic-default-company">Lat</label>
                            </div>
                            <div class="form-floating form-floating-outline mb-4">
                                <input type="text" class="form-control" id="basic-default-company"
                                    value="{{licensing.typeAds}}" name="lat" readonly />
                                <label for="basic-default-company">Type ads</label>
                            </div>

                            <div class="form-floating form-floating-outline mb-4">
                                <input type="text" class="form-control" id="basic-default-company"
                                    value="{{licensing.height}}" name="height" readonly />
                                <label for="basic-default-company">Height</label>
                            </div>
                            <div class="mb-4">
                                <div class="input-group input-group-merge">
                                    <div class="form-floating form-floating-outline">
                                        <input type="text" id="basic-default-email" class="form-control"
                                            value="{{licensing.width}}" aria-label="john.doe"
                                            aria-describedby="basic-default-email2" name="width" readonly />
                                        <label for="basic-default-email">Width</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-floating form-floating-outline mb-4">
                                <input class="form-control" type="datetime-local" id="html5-datetime-local-input"
                                    value="{{licensing.start_date}}" name="start_date" readonly />
                                <label for="html5-datetime-local-input">Start date</label>
                            </div>
                            <div class="form-floating form-floating-outline mb-4">
                                <input class="form-control" type="datetime-local" id="html5-datetime-local-input"
                                    value="{{licensing.end_date}}" name="end_date" readonly />
                                <label for="html5-datetime-local-input">End date</label>
                            </div>
                            <div class="form-floating form-floating-outline mb-4">
                                <textarea id="basic-default-message" class="form-control" style="height: 60px"
                                    name="content" readonly>{{licensing.content}} </textarea>
                                <label for="basic-default-message">Content</label>
                            </div>
                            <div class="mb-3">
                                <label for="formFile" class="form-label">Default file
                                    input example</label>
                                {{!-- <input class="form-control" type="file" id="formFile" name="image" multiple /> --}}
                            </div>
                            <div class="mb-3">
                                <img id="ad_img" src="{{licensing.urlImg}}" alt="image" width="200px" height="200px">
                            </div>

                            <button type="button" onclick="window.history.back();" class="btn btn-secondary">
                                Back
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Merged -->
        </div>
    </div>

    <script>
        document.getElementById('formFile').addEventListener('change', function (event) {
            const files = event.target.files;
            if (files.length > 0) {
                const newImageUrl = URL.createObjectURL(files[0]);
                document.getElementById('ad_img').src = newImageUrl;
            }
        });

    </script>