<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">

        <!-- Basic Layout -->
        <div class="row">
            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Form place advertising sign</h5>
                        <small class="text-muted float-end">ID:
                            {{placeAds._id}}</small>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/change/editPlace?id={{placeAds._id}}">
                            <div class="form-floating form-floating-outline mb-4">
                                <input type="text" class="form-control" id="basic-default-fullname"
                                    value="{{placeAds.type}}" name="type" />
                                <label for="basic-default-fullname">Type</label>
                            </div>
                            <div class="form-floating form-floating-outline mb-4">
                                <input type="text" class="form-control" id="basic-default-fullname"
                                    value="{{placeAds.address}}" name="address" />
                                <label for="basic-default-fullname">Address</label>
                            </div>
                            <div class="form-floating form-floating-outline mb-4">
                                <input type="text" class="form-control" id="basic-default-company"
                                    value="{{placeAds.lon}}" name="lon" />
                                <label for="basic-default-company">Lon</label>
                            </div>
                            <div class="form-floating form-floating-outline mb-4">
                                <input type="text" class="form-control" id="basic-default-company"
                                    value="{{placeAds.lat}}" name="lat" />
                                <label for="basic-default-company">Lat</label>
                            </div>
                            <div class="form-floating form-floating-outline mb-4">
                                <select multiple class="form-select h-px-100" id="exampleFormControlSelect2"
                                    aria-label="Multiple select example" name="ads">
                                    {{#each advertisements}}
                                        <option value="{{this._id}}">{{this.type}} - id: {{this._id}}
                                        </option>
                                    {{/each}}
                                </select>
                                <label for="exampleFormControlSelect2">Open this select advertising
                                    sign</label>
                            </div>
                            <div class="form-floating form-floating-outline mb-4">
                                <textarea class="form-control h-px-100" id="exampleFormControlTextarea1"
                                    placeholder="Write reason here..." name="reason"></textarea>
                                <label for="exampleFormControlTextarea1">Reason</label>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                Submit
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Merged -->
        </div>
    </div>