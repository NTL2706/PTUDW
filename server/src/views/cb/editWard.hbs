<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">

        <!-- Basic Layout -->
        <div class="row">
            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Edit ward</h5>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/cb/editWard?id={{ward._id}}">
                            <div class="form-floating form-floating-outline mb-4">
                                <input type="text" class="form-control" id="basic-default-fullname"
                                    value="{{ward.name}}" name="name" />
                                <label for="basic-default-fullname">Name</label>
                            </div>
                            <div class="form-floating form-floating-outline mb-4">
                                <select class="form-select" id="exampleFormControlSelect1"
                                    aria-label="Default select example" name="district">
                                    <option value="{{ward.district._id}}">{{ward.district.name}}
                                    </option>
                                </select>
                                <label for="exampleFormControlSelect1">Open this select
                                    district</label>
                            </div>

                            <button type="submit" class="btn btn-primary">
                                Edit
                            </button>
                            <button onclick="window.history.back()" type="button" class="btn btn-secondary">
                                Back
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Merged -->
        </div>
    </div>
    <!-- / Content -->