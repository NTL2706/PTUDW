<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">

        <!-- Basic Layout -->
        <div class="row">
            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Edit district</h5>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/cb/editDistrict?id={{district._id}}">
                            <div class="form-floating form-floating-outline mb-4">
                                <input type="text" class="form-control" id="basic-default-fullname"
                                    value="{{district.name}}" name="name" />
                                <label for="basic-default-fullname">Name of district</label>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                Edit
                            </button>
                            <button onclick="window.history.back()" type="button" class="btn btn-secondary">
                                Back
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Merged -->
        </div>
    </div>
    <!-- / Content -->