<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="py-3 mb-4">
            <span class="text-muted fw-light">View/</span> Ward
        </h4>

        <!-- Basic Bootstrap Table -->
        <div class="demo-inline-spacing" style="text-align: right;">
            <a href="/cb/create-ward">
                <button type="button" class="btn btn-outline-primary">
                    Create
                </button>
            </a>
        </div>
        <br>
        <div class="card">
            <div class="table-responsive text-nowrap">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        {{#if ward}}
                        {{#each ward}}
                        <tr>

                            <td>
                                <span class="fw-medium">{{this.name}}</span>
                            </td>

                            <td style="text-align: end;">
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow"
                                        data-bs-toggle="dropdown">
                                        <i class="mdi mdi-dots-vertical"></i>
                                    </button>

                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="/cb/editWard?id={{this._id}}"><i
                                                class="mdi mdi-pencil-outline me-1"></i>
                                            Edit</a>
                                        <a class="dropdown-item" href="/cb/deleteWard?id={{this._id}}"><i
                                                class="mdi mdi-trash-can-outline me-1"></i>
                                            Delete</a>
                                    </div>

                                </div>
                            </td>
                        </tr>
                        {{/each}}
                        {{ else }} 
                            <td>
                                <span class="fw-medium">Không có phường nào</span>
                            </td>
                        {{/if}}
                        
                    </tbody>
                </table>

            </div>

            <button onclick="window.history.back()" type="button" class="btn btn-secondary"> Back </button>
        </div>